<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"   /> <!-- border color -->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" >
            </stroke>
        </shape>

    </item>

    <item
        android:bottom="1dp"
>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="#FFF"  /> <!-- background color -->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" >
            </stroke>
        </shape>

    </item>

    <item
        android:left="1dp"
        android:right="1dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="#B3E5FC"  /> <!-- background color -->
            <stroke
                android:width="1dp"
                android:color="#FFF" >
            </stroke>
        </shape>
    </item>

</layer-list>